rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Tests collection
    match /tests/{testId} {
      allow read: if true;
      allow create: if request.resource.data.createdBy != null;
      allow update, delete: if resource.data.createdBy == request.resource.data.createdBy;
      
      // Test results subcollection
      match /results/{resultId} {
        allow read: if resource.data.userId == request.auth.uid || 
                      get(/databases/$(database)/documents/tests/$(testId)).data.createdBy == request.auth.uid;
        allow create: if request.resource.data.userId != null;
        allow update, delete: if resource.data.userId == request.auth.uid;
      }
    }
    
    // Photos collection
    match /photos/{photoId} {
      allow read: if true;
      allow create: if request.resource.data.uploadedBy != null;
      allow update, delete: if resource.data.uploadedBy == request.resource.data.uploadedBy;
    }
    
    // Forum posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.resource.data.username != null;
      allow update, delete: if false; // No editing or deleting forum posts to keep it simple
    }
  }
} 